<%- include("../partials/header.ejs", {title: "Game Of Thrones"}) %>


<p>"That's what I do, I drink and I know things" - Tyrion Lannister</p>

<section>
  <!--<p><a href="/db-test">Clicking this link will test to see if your db connection is ok</a></p>-->

  <form action="/fullList" method="GET">
    <input type="text" name="searchTerm" placeholder="episode search" />
    <button type="submit">submit</button>
  </form>

  <div class="grid-container">
    <% gameOfThronesEpisodes.forEach((element, index) => { %>
    <div class="card">
      <p> <%= episodeCodes[index]%></p>
      <h3> <a href="<%=element.id%>"><%= element.name %></a></h3>
      <img src="<%= element.image.medium%>" alt="Episode Image">
      <p> <%- element.summary%></p>
    </div>
    <% })%>
  </div>
</section>

<%- include("../partials/footer.ejs") %>